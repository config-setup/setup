#!/usr/bin/env bash

git::clone() {
  local repo_url=$1
  local repo_dir=$2

  # Local DIR exists
  if [ -d "$repo_dir" ]; then
    pushd "$repo_dir" &>/dev/null || exit

    # Update url if it is wrong
    if [[ $(git remote get-url origin) == "$repo_url" ]]; then
      git remote set-url origin "$repo_url"
    fi

    # Pull updates
    echo "$repo_url $(git pull)"

    popd &>/dev/null || exit

  # Clone Repo
  else
    echo "$repo_url $(git clone "$repo_url" "$repo_dir")"
  fi

  # If the repo has a setup script then run it
  if [[ -f "$repo_dir/setup.sh" ]]; then 
    ./"$repo_dir"/setup.sh
  fi
}

setup() {
  # ohmyzsh
  if [ -z "${ZSH}" ]; then
    sh -c "$(curl -fsSL https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh)"
  fi

  # config files
  echo "Pulling .zshrc from https://github.com/config-setup/setup/blob/main/.zshrc"
  curl -fsSL https://raw.githubusercontent.com/config-setup/setup/refs/heads/main/.zshrc -o "$HOME/.zshrc"

  # config flies in git
  git::clone git@github.com/config-setup/local-bin.git ~/.local/bin/
  git::clone git@github.com/config-setup/tmux.git ~/.config/tmux
  git::clone git@github.com/config-setup/nvim.git ~/.config/nvim
  git::clone git@github.com/config-setup/kitty.git ~/.config/kitty
  git::clone git@github.com/tmux-plugins/tpm ~/.tmux/plugins/tpm

  # font install
  curl -fsSL https://github.com/ryanoasis/nerd-fonts/releases/download/v3.4.0/Hasklig.zip -o /tmp/Hasklig.zip
  unzip -o /tmp/Hasklig.zip -d "$HOME/.local/share/fonts/"
  rm /tmp/Hasklig.zip

  # font cache reset
  fc-cache -fv

  # mise install
  curl https://mise.run | MISE_QUIET=1 sh

  # activate mise if it's not aleady active
  if ! command -v mise >/dev/null 2>&1; then
    eval "$("$HOME/.local/bin/mise" activate zsh)"
  fi

  # use mise to install tools
  mise use --global --yes \
    neovim starship \
    jq fzf lazydocker lazygit ruff \
    opentofu terragrunt kubectl k3d \
    python node golang rust

  # Update pip
  python3 -m pip install -U pip

}

setup::docker() {
  curl -fsSL https://get.docker.com | bash
}

case $1 in
docker) setup::docker ;;
*) setup ;;
esac
